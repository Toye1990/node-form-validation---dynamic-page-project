<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/assets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .error-message{
            background-color: red;
            position: fixed;
            text-align: center;
            top: 5%;
            right: 5%;
            padding: 5px;
            color: white;
            z-index: 999;
        }

          .success-message{
            background-color: rgb(0, 255, 21);
            position: fixed;
            text-align: center;
            top: 5%;
            right: 5%;
            padding: 5px;
            color: white;
            z-index: 999;
        }
    </style>
</head>
<body>
    <div class="container-1">
        
        {{>header}}

<div class="error-message">{{error}}</div>
<div class="success-message">{{message}}</div>


<div class="col">
    <h4 class="text-align-center">Please fill all fields</h4>
    <form action="/stud" method="post">
        <p><input type="text" class="form-control" name="name" placeholder="username"></p>
        <p></p><input type="email" class="form-control" name="email" placeholder="email"></p>
        <p></p><input type="password" class="form-control" name="password" placeholder="password"></p>
        <p></p><input type="text" class="form-control" name="subject" placeholder="subject"></p>
        <p></p><textarea class="form-control" rows="3" name="message" placeholder="message"></textarea></p>
        <p><button type="submit" class="btn btn-outline-primary">send</button></p>
    </form>
</div>



    
{{>footer}}

    </div>

    <script>
            const errorMessage = document.querySelector('.error-message');
            const successMessage = document.querySelector('.success-message');

            if(successMessage.textContent.trim() === ""){
                successMessage.style.display = "none"
            }else{
                successMessage.style.display = 'block'
                setTimeout(()=>{
                    successMessage.style.display = "none"
                }, 3000)
            }

            if(errorMessage.textContent.trim() === ""){
                errorMessage.style.display = "none"
            }else{
                errorMessage.style.display = 'block'
                setTimeout(()=>{
                    errorMessage.style.display = "none"
                }, 3000)
            }
    </script>
</body>
</html>